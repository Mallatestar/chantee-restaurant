<?xml version="1.0" encoding="UTF-8"?>
<Context path="/chantee-restaurant">
    <!-- Specify a JDBC datasource -->
    <Resource name="jdbc/chanteedb"
    auth="Container"
    type="javax.sql.DataSource"
    username="root"
    password="password"
    driverClassName="com.mysql.cj.jdbc.Driver"
    url="jdbc:mysql://localhost:3306/chanteedb?autoReconnect=true&amp;serverTimezone=UTC"
    validationQuery="select 1"
    maxTotal="10"
    maxIdle="4"/>
</Context>
